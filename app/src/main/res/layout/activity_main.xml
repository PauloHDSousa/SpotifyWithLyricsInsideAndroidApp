<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackGround"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackGround"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainBackGround"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCurrentSong"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:textAlignment="center"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/ivAlbum"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="left" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sbMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/seek_bar_ruler"
            android:thumb="@drawable/seek_bar_slider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorMainBackGround"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibShuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/shuffle" />

            <ImageButton
                android:id="@+id/ibPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                app:srcCompat="@android:drawable/ic_media_previous" />


            <ImageButton
                android:id="@+id/ibStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:visibility="gone"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/ibPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:visibility="gone"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/ibNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                app:srcCompat="@android:drawable/ic_media_next" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorMainBackGround"
            android:orientation="vertical">

            <WebView
                android:id="@+id/wbLyrics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"

                android:layout_marginRight="60dp">

            </WebView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbspeedScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:clickable="true"
                app:borderWidth="0dp"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbslowScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fbspeedScroll"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:clickable="true"
                app:borderWidth="0dp"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbStopPlayScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fbslowScroll"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:clickable="true"
                app:backgroundTint="@color/colorPrimaryDark"
                app:borderWidth="0.5dp"
                android:src="@android:drawable/ic_media_pause" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>